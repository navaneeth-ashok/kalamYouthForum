@model KalamYouthForumWebApp.Models.ViewModels.ProjectImages

@{
    ViewData["Title"] = Model.Project.Heading;
}

<h1>@Model.Project.Heading</h1>

<div class="project-carousel">
    <div>
        @Html.Raw(Model.Project.Content)
    </div>
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @{
                var i = 0;
                foreach (var imageObj in Model.RelatedProjectImages)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                            <img src="@imageObj.ImageDataURL" class="d-block w-100">
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="@imageObj.ImageDataURL" class="d-block w-100" height="300">
                        </div>
                    }
                    i++;
                }
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<div>
    <a asp-action="ListProjects" class="btn btn-info" >Back to Projects </a>
</div>
