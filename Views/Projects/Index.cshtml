@model IEnumerable<KalamYouthForumWebApp.Models.Project>

@{
    ViewData["Title"] = "Project Listing";
}

<h1>Project Listing Page</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="project-index-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Heading)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FilePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Heading)
            </td>
            <td>
                @Html.Raw(item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FilePath)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectIDKey">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProjectIDKey">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProjectIDKey">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#project-index-table').DataTable();
    });
</script>