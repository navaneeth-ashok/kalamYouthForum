<script>
    function receiveMail() {
        let input = $('#newsletterId').val();
        console.log(input);
        if (input == null || input === "" || input == "") {
            document.getElementById("message").innerText = "Please enter an Email ID";
        } else {

            var data = { EmailID: $('#newsletterId').val() };

            $.ajax({
                url: '@Url.Action("Create", "NewsletterList")',
                type: "post",
                data: data,
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                success: function (result) {
                    document.getElementById("message").innerText = "Successfully subscribed to the newsletter";
                },
                error: function (result) {
                    document.getElementById("message").innerText = "Sorry, there was an error from our end, we are looking into it";
                }
            });
        }

}


</script>