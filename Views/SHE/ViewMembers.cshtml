@model IEnumerable<KalamYouthForumWebApp.Models.SHGMember>

@{
    ViewData["Title"] = "View Members";
}

<h1>View Members for SHG: @ViewBag.shgID</h1>

<form asp-action="AddMembers" asp-controller="SHE" method="post">
    <input type="hidden" name="shgID" value="@ViewBag.shgID" />
    <input type="submit" name="submit" class="btn btn-success" value="Add members" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dob)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodDonation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dob)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BloodGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BloodDonation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                <a asp-action="EditSHGMember" asp-route-id="@item.SHGMemberId">Edit</a> |
                <a asp-action="ViewSHGMember" asp-route-id="@item.SHGMemberId">Details</a> |
                <a asp-action="DeleteMembersFromSHG" asp-route-id="@item.SHGMemberId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
