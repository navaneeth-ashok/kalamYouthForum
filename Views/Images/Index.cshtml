@model IEnumerable<KalamYouthForumWebApp.Models.Image>

@{
    ViewData["Title"] = "Image Listing";
}

<h1>Image Listing Page</h1>

<p>
    <a asp-action="UploadDefaultImage" class="btn btn-primary">Upload default image</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageTitle)
            </th>
            <th>
                @Html.Encode("Image Thumbnail")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageTitle)
            </td>
            <td>
                <img src="@item.ImageDataURL" width="300" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
