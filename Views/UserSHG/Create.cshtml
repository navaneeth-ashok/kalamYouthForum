@model KalamYouthForumWebApp.Models.ViewModels.UserXSHG

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>User to SHG mapping</h4>
<hr />
<p>If no SHG is shown in the list, that means you are not assigned with any SHG.</p>
<p>Please get access to a chapter or an SHG for assigning users to SHGs.</p>
<p>Access will be given by Chapter Users or Administrators.</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserID" class="control-label"></label>
                <select asp-for="UserID" class="form-control" asp-items="ViewBag.UserID"></select>
            </div>
            <div class="form-group">
                <label asp-for="SHGID" class="control-label"></label>
                <select asp-for="SHGID" class="form-control" asp-items="ViewBag.SHGID"></select>
            </div>
            <div class="form-group">
                @if (ViewBag.SHGCount == 0)
                {
                    <input type="submit" value="Save" class="btn btn-primary" disabled />
                }
                else
                {
                    <input type="submit" value="Save" class="btn btn-primary" />
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

