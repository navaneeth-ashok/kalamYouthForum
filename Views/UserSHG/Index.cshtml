@model IEnumerable<KalamYouthForumWebApp.Models.ViewModels.UserChapterSHG>

@{
    ViewData["Title"] = "Users and SHGs";
}

<h1>Users and SHGs</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="user-shg-table">
    <thead>
        <tr>
            <th>
                @Html.Encode("User Email")
            </th>
            <th>
                @Html.Encode("Name")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChapterModel.ChapterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserXSHG.SHEModel.SHEName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserXSHG.ApplicationUser.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserXSHG.ApplicationUser.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChapterModel.ChapterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserXSHG.SHEModel.SHEName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserXSHG.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserXSHG.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserXSHG.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#user-shg-table').DataTable();
    });
</script>
